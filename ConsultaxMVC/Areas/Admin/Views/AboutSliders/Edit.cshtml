@model ConsultaxMVC.Models.AboutSlider

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>AboutSlider</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="Photo" />
            <div class="form-group">
                <label>Old Photo</label><br />
                <img src="@Model.Photo" width="150" />
            </div>
            <div class="form-group">
                <label class="control-label">New Photo</label>
                <input type="file" asp-for="Photo" class="form-control" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

